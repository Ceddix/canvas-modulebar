{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Canvas Modulebar",
  "version": "2.0",
  "description": "Keep Your Modules Visible on Canvas and Modernize Your Canvas Sidebar! Created by Kasper, updated by Ceddix.",
  "permissions": [
    "storage"
],
  "icons": {
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/courses/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    },
		{
			"matches": ["*://*.instructure.com/*", "*://canvas.maastrichtuniversity.nl/*"],
			"css": ["sidebar.css"]
		}
  ],
  "author": ["Kasper", "Cedrik"]
}
